                <input id={{this.name}} type="radio" name="type" value={{this._id}}></input>
            </div>
            {{/each}}






        </div>
        <div class="w-100">
            <input class="btn btn-outline-secondary" id="submit" type="submit" value="Tiếp Tục "></input>

        </div>
    </form>
</div>