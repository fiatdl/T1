<div class="register">
  {{#if announce}}<div aria-live="polite" aria-atomic="true" class="toast-container">
    <div class="toast" id="alert">
      <div class="toast-header toast-container-header">
        <small>Thông Tin Đăng Kí Chưa Hợp Lê</small>
        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body toast-container-body">
        <p>{{message}}</p>
      </div>
    </div>
  </div>{{/if}}
  <div class="container w-100 vh-100 d-flex flex-row justify-content-center align-items-center">
    <form class=" d-flex flex-column align-items-center bg-white p-4 rounded-2" id="registerForm" method="post"
      action="/register">
      <p class="fw-bold text-center">Đăng Kí Tài Khoản</p>
      <div class="form-floating mb-2">
        <input class="form-control" type="text" id="fullName" name="fullName" {{!-- value={{data.fullName}} --}} />
        <label for="fullName">Họ và Tên</label>
      </div>

      <div class="form-floating mb-2">
        <input class="form-control" type="email" id="email" name="email" {{!-- value={{data.email}} --}} />
        <label for="email">gmail</label>

      </div>

      <div class="form-floating mb-2">
        <input class="form-control" type="password" id="password" name="password" {{!-- value={{data.password}} --}} />
        <label class="form-label" for="password">Mật Khẩu</label>

      </div>

      <div class="form-floating mb-2">
        <input class="form-control" type="password" id="passwordChecking" name="passwordChecking" />
        <label for="passwordChecking">Nhập Lại Mật Khẩu</label>
      </div>


      <div class="w-75 ">
        <button class="btn btn-dark w-75">Register</button>
      </div>
    </form>
  </div>
</div>
<script>
  $(document).ready(function () {
    $("#alert").toast({ animation: true, delay: 100000 }); $("#alert").toast("show");
  });
</script>